<% if @address.nil? %>   
    <h3>No Address Found</h3>
    <%= link_to 'New Address', new_location_address_path(@location), class: 'btn orange white-text' %>
<% else %>
    <h4><%= @address.street %></h4>
    <h4><%= @address.city %>, <%= @address.state %> <%= @address.zip %></h4>
    <%= link_to 'Show', location_address_path(@location, @address), class: 'btn orange white-text' %>
<% end %>
